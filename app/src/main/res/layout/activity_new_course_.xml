<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Course_Activity"
    android:background="#232121">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.15">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Course"
            android:textColor="@android:color/holo_orange_dark"
            android:fontFamily="@font/bad_script"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            android:gravity="center">
        </TextView>
        <EditText
            android:id="@+id/course_name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Course Name"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white">

        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#2196F3"></RelativeLayout>
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_marginTop="20dp"
            android:id="@+id/course_type_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:met_floatingLabel="normal"
            android:gravity="left"
            android:paddingLeft="18dp"
            android:textColorHint="@android:color/white"
            android:background="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/ThemeSpinner"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"
            android:background="#2196F3"></RelativeLayout>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/price_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:met_floatingLabel="normal"
            android:gravity="left"
            android:paddingLeft="18dp"
            android:textColorHint="@android:color/white"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"
            android:background="#2196F3"></RelativeLayout>
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/city_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:met_floatingLabel="normal"
            android:gravity="left"
            android:paddingLeft="18dp"
            android:textColorHint="@android:color/white"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"
            android:background="#2196F3"></RelativeLayout>
        <EditText
            android:id="@+id/course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Course Description"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:lines="2">

        </EditText>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#2196F3"></RelativeLayout>
        <ProgressBar
            android:id="@+id/new_course_pb"
            android:layout_marginTop="15dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="invisible"/>
        <Button
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Course"
            android:background="@drawable/roundedbutton"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:onClick="creteNewCourse"></Button>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1.85">
        <include layout="@layout/bottom_bar_activity"></include>
</LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>